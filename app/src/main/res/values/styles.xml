<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryColor</item>
    </style>
    <style name="AppTheme.SplashTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>




    <style name="Widget" parent="@android:style/Widget">

    </style>
    <style name="Widget.Button">
        <item name="android:textColor">@color/primaryDarkColor</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>
    <style name="Widget.Button.Transparent">
        <item name="android:background">@null</item>
    </style>

    <style name="chechBoxLogin">
        <item name="android:buttonTint">@color/primaryDarkColor</item>
    </style>

    <style name="Widget.WidgetError">
        <item name="android:textColor">@color/txError</item></style>
</resources>
